<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Departures">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        >
        <EditText
            android:id="@+id/etCurrentLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/currentLocation"
            android:background="@drawable/tv_stroke"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/grayLines"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="none"
            android:importantForAutofill="no"
            tools:ignore="LabelFor" />
        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/departing"
            android:textSize="18sp"
            android:textColor="@color/grayLines"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/etCurrentLocation"
            app:layout_constraintTop_toBottomOf="@id/etCurrentLocation"
            />
        <TextView
            android:id="@+id/tvTimeDeparting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/now"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:textColor="@color/grayLines"
            android:textStyle="bold"
            android:drawablePadding="2dp"
            app:layout_constraintStart_toEndOf="@id/textview"
            app:layout_constraintTop_toTopOf="@id/textview"
            app:drawableEndCompat="@drawable/ic_baseline_arrow"
            app:drawableTint="@color/grayLines" />
        <Button
            android:id="@+id/btnVerifyPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:textAllCaps="false"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/tv_stroke"
            android:backgroundTint="@color/grayLines"
            android:textColor="@color/backgroundColor"
            app:layout_constraintTop_toBottomOf="@id/tvTimeDeparting"
            app:layout_constraintStart_toStartOf="@id/etCurrentLocation"
            app:layout_constraintEnd_toEndOf="@id/etCurrentLocation"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>