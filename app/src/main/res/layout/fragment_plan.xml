<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanFragment"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="51dp"
        android:drawableRight="@drawable/ic_emoji__1_"
        android:drawablePadding="30dp"
        android:paddingHorizontal="20dp"
        android:drawableTint="#D69D66"
        android:text="@string/Welcome"
        android:textColor="#D69D66"
        android:textSize="45dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPlan"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/btnshap"
        android:drawableTop="@drawable/ic_loction"
        android:drawableTint="#e0e2ee" />

    <Button
        android:id="@+id/btnBookNow"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="5dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/btnshap"
        android:drawableRight="@drawable/ic_reservation_"
        android:drawableTint="#e0e2ee" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:paddingStart="28dp"
        android:drawableLeft="@drawable/ic_right_arrow"
        android:drawableRight="@drawable/ic_back"
        android:drawablePadding="10dp"
        android:drawableTint="#E0E2EE"
        android:text="@string/ChooseASavedPlace"
        android:textColor="#d69d66"
        android:textSize="24dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:drawableLeft="@drawable/ic_right_arrow"
        android:drawableRight="@drawable/ic_back"
        android:drawablePadding="10dp"
        android:drawableTint="#e0e2ee"
        android:paddingStart="28dp"
        android:text="@string/SetdestinationOnMap"
        android:textColor="#d69d66"
        android:textSize="24dp"
        android:textStyle="bold" />

</FrameLayout>