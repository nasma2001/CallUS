<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvPhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_user_profile_70"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvPhoneNum"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@id/tvPhoneNum"/>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tvPhoneNum"
        app:layout_constraintEnd_toEndOf="@id/image"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="60dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_stroke"
            android:backgroundTint="@color/black"
            android:drawableTop="@drawable/ic_help"
            android:drawableTint="@color/backgroundColor"
            android:drawablePadding="10dp"
            android:text="@string/help"
            android:padding="10dp"
            android:layout_weight="1"
            android:textColor="@color/backgroundColor"
            android:textAllCaps="false"
            tools:targetApi="m"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/btnWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_stroke"
            android:backgroundTint="@color/black"
            android:drawableTop="@drawable/ic_wallet"
            android:layout_marginHorizontal="10dp"
            android:drawableTint="@color/backgroundColor"
            android:drawablePadding="10dp"
            android:text="@string/wallet"
            android:padding="10dp"
            android:layout_weight="1"
            android:textColor="@color/backgroundColor"
            android:textAllCaps="false"
            tools:targetApi="m"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/btnTrips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_stroke"
            android:backgroundTint="@color/black"
            android:drawableTop="@drawable/ic_trips"
            android:drawableTint="@color/backgroundColor"
            android:drawablePadding="10dp"
            android:text="@string/trips"
            android:padding="10dp"
            android:layout_weight="1"
            android:textColor="@color/backgroundColor"
            android:textAllCaps="false"
            tools:targetApi="m"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:orientation="horizontal"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/linear"
        app:layout_constraintStart_toStartOf="@id/linear"
        app:layout_constraintEnd_toEndOf="@id/linear"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="60dp"/>

    <TextView
        android:id="@+id/tvMassage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grayLines"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/massage"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="@id/divider1"
        android:layout_marginTop="60dp"
        app:drawableStartCompat="@drawable/ic_messages" />
    <TextView
        android:id="@+id/tvSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grayLines"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/setting"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvMassage"
        app:layout_constraintStart_toStartOf="@id/linear"
        android:layout_marginTop="20dp"
        app:drawableStartCompat="@drawable/ic_settings" />

</androidx.constraintlayout.widget.ConstraintLayout>