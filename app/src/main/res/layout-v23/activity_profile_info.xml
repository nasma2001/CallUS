<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".ProfileInfo">

    <TextView
        android:id="@+id/tvPhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="60dp"
        android:textColor="@color/grayLines"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivProfile70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_user_profile_70"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvPhoneNum" />

    <LinearLayout
        android:id="@+id/linearBtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="60dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/ivProfile70"
        app:layout_constraintStart_toStartOf="@id/tvPhoneNum"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneNum">

        <Button
            android:id="@+id/btnHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/tv_stroke"
            android:backgroundTint="@color/grayLines"
            android:drawableTop="@drawable/ic_depart"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="@string/help"
            android:textColor="@color/backgroundColor"
            android:drawableTint="@color/backgroundColor"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/tv_stroke"
            android:backgroundTint="@color/grayLines"
            android:drawableTop="@drawable/ic_depart"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:textColor="@color/backgroundColor"
            android:drawableTint="@color/backgroundColor"
            android:text="@string/wallet"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnTrips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/tv_stroke"
            android:backgroundTint="@color/grayLines"
            android:drawableTop="@drawable/ic_depart"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:textColor="@color/backgroundColor"
            android:drawableTint="@color/backgroundColor"
            android:text="@string/trips"
            android:textAllCaps="false"
            android:textSize="18sp" />
    </LinearLayout>
    <View
        android:id="@+id/devider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:orientation="horizontal"
        android:background="#68E0E2EE"
        app:layout_constraintTop_toBottomOf="@id/linearBtns"
        app:layout_constraintStart_toStartOf="@id/linearBtns"
        app:layout_constraintEnd_toEndOf="@id/linearBtns"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="40dp"/>
    <TextView
        android:id="@+id/tvMassage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/devider"
        app:layout_constraintEnd_toEndOf="@id/devider"
        app:layout_constraintTop_toBottomOf="@id/devider"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:text="@string/massage"
        android:textColor="@color/grayLines"
        android:textStyle="bold"
        android:textSize="18sp"
        android:drawablePadding="10dp"
        app:drawableStartCompat="@drawable/ic_user_profile" />
    <TextView
        android:id="@+id/tvSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tvMassage"
        app:layout_constraintEnd_toEndOf="@id/tvMassage"
        app:layout_constraintTop_toBottomOf="@id/tvMassage"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:text="@string/setting"
        android:textColor="@color/grayLines"
        android:textStyle="bold"
        android:textSize="18sp"
        android:drawablePadding="10dp"
        app:drawableStartCompat="@drawable/ic_user_profile" />
    
</androidx.constraintlayout.widget.ConstraintLayout>